<div class="table-responsive">
  <h1>List of things in account</h1>
  <table class="table-striped table-condensed table-bordered">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>arn</th>
      <th>version</th>
    </tr>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.thing_name %></td>
        <td><%= thing.thing_type_name %></td>
        <td><%= thing.thing_arn %></td>
        <td><%= thing.version %></td>
      </tr>
    <% end %>
  </table>
</div>